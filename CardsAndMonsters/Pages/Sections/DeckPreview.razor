<div class="deck-card">
    <h2 class="text-white over-img">@DeckCount</h2>
    <img class="card-img-top" src="/images/card-cover.jpg">
</div>
@code {
    [Parameter]
    public int DeckCount { get; set; }

    public override Task SetParametersAsync(ParameterView parameters)
    {
        foreach (var parameter in parameters)
        {
            switch (parameter.Name)
            {
                case nameof(DeckCount):
                    DeckCount = (int)parameter.Value;
                    break;
                default:
                    throw new ArgumentException($"Unknown parameter: {parameter.Name}");
            }
        }

        return base.SetParametersAsync(ParameterView.Empty);
    }
}

<style>
    .deck-card {
        width: 80px;
        height: 120px;
        border: 1px solid #aaa;
        border-radius: 3px;
    }

    .over-img {
        position: absolute;
        margin:30px;
    }
</style>
